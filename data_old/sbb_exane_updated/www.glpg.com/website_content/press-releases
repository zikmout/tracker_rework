.directive( 'cmsQuotes', function() {
	return {
		restrict: 'A',
		templateUrl: function( element, attr ) {
			return '/tmpls/' + ( attr.tmpl || 'quotes' ) + '.html';
		}
	}
})
.directive( 'cmsFinancialData', function( $http, $compile ) {
	// http://stackoverflow.com/questions/14632260/can-you-change-templateurl-on-the-fly
	// http://stackoverflow.com/questions/21835471/angular-js-directive-dynamic-templateurl
	return {
		restrict: 'A',
		templateUrl: function( element, attr ) {
			return '/tmpls/financial-data.html';
		},
		link: function( scope, element, attrs ) {

			$( element )
			.find( '[data-cms-market-menu]' )
			.on( 'change', function() {

				$http.post( '/cms/quotes.php', {
					market: scope[ 'quotes' ][ 'market' ]
				})
				.then( function( response ) {
					scope[ 'quotes' ] = response.data;
					scope[ 'chartSettings' ][ 'ticker' ] = scope[ 'quotes' ][ 'tick' ];
					$compile( $( '[data-cms-chart]' ).empty() )( scope );
				});
			});
		}
	}
})
.directive( 'cmsChart', function( $window ) {
	return {
		restrict: 'A',
		link: function( scope, element, attr ) {

			var w = scope.chartSettings[ 'width' ] = element.parent().width();
			var h = scope.chartSettings[ 'height' ];

			var chartUrl = function() {

				var p = scope.chartSettings[ 'period' ];
				var u = scope.charts[ 'historical' ];

				if ( p == 'intra' || p == 'week' ) {
					u = scope.charts[ 'intraday' ];
				}

				return u + "?" + $.param( scope.chartSettings );
			}

			angular.element( "<iframe>" )
			.attr({
				id: 'iChart',
				src: chartUrl(),
				width: "100%",
				height: h,
				frameborder: "0",
				scrolling: "no",
				style: "border: none; overflow: hidden;"
			})
			.appendTo( element )
			.parents( 'body' )
			.find( '[data-cms-chart-menu]' )
			.on( 'change', function( event ) {

				scope.chartSettings[ 'period' ] = $( this ).val().split( "," )[ 0 ];
				scope.chartSettings[ 'qty' ] = $( this ).val().split( "," )[ 1 ];
				scope.chartSettings[ 'news' ] = $( this ).val().split( "," )[ 2 ];

				// Reload the chart
				angular.element( '#iChart' ).attr( "src", chartUrl() );
			});

			angular.element( $window ).on( 'resize', function() {

				var w = angular.element( '#iChart' ).parent().width();

				if ( scope.chartSettings[ 'width' ] != w ) {

					scope.chartSettings[ 'width' ] = w;

					setTimeout( function() {
						angular.element( '#iChart' ).attr( 'src', chartUrl() );
					}, 100 );
				}
			});
		}
	}
})
.directive( 'cmsRecruitee', function( $http, $location, $sce ) {
	return {
		restrict: 'A',
		scope: {},
		templateUrl: function( element, attrs ) {

			return '/tmpls/' + attrs.tmpl + '.html';
		},
		link: function( scope, element, attrs ) {

			scope.isLoading = true;
			scope._lang = [];
			scope.positions = [];

			scope.getData = function() {

				scope.isLoading = true;

				$http.post( '/cms/recruitee.php', {
					cnt: attrs.cnt || 0,
					params: attrs.skipUrl ? null : $location.search()
				})
				.then( function( response ) {

					scope.isLoading = false;
					scope._lang = response.data._lang;
					scope.positions = response.data.positions;
				});
			};

			scope.$on( '$locationChangeSuccess', function() {

				if ( attrs.skipUrl ) {

					return true;
				}

				scope.getData();
			});

			// Init
			scope.getData();
		}
	}
})
.directive( 'cmsJobs', function( $http, $location ) {
	return {
		restrict: 'A',
		scope: {},
		templateUrl: '/tmpls/jobs.html',
		link: function( scope, element, attrs ) {

			scope.isLoading = true;
			scope._lang = [];
			scope.countries = [];
			scope.departments = [];
			scope.offers = [];

			scope.search = {};
			scope.search.title = '';
			scope.search.department = '';
			scope.search.location = '';

			scope.notNull = function( obj ) {

				for ( var i in obj ) {

					if ( obj[ i ] === null ) {

						obj[ i ] = '';
					}
				}

				return obj;
			};

			scope.getData = function() {

				scope.isLoading = true;

				$http.post( '/cms/jobs.php' )
				.then( function( response ) {

					scope.isLoading = false;
					scope._lang = response.data._lang;
					scope.countries = response.data.countries;
					scope.departments = response.data.departments;
					scope.offers = response.data.offers;
				});
			};

			// Init
			scope.getData();
		}
	}
})
.directive( 'cmsJobInfo', function( $http, $location, $sce, $timeout ) {
	return {
		restrict: 'A',
		scope: {},
		templateUrl: '/tmpls/job-info.html',
		link: function( scope, element, attrs ) {

			scope.isLoading = true;
			scope._lang = [];
			scope.offer = null;
			scope.showShareBtns = false;

			scope.toHtml = function( html ) {
				return $sce.trustAsHtml( html );
			};

			scope.getData = function() {

				scope.isLoading = true;

				// jsGlobalData - set in index.php
				if ( jsGlobalData.cmsJobInfo ) {

					scope.isLoading = false;
					scope._lang = jsGlobalData.cmsJobInfo._lang;
					scope.offer = jsGlobalData.cmsJobInfo.offer;
