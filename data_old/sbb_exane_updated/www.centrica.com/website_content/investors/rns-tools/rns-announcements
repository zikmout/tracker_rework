    <!-- Map Modal JS (JSON)-->
    <script>
        var app = new Vue({
            el: "#app",
            data: {
                currentFilter: "row",
                projects: []
            },
            created: function created() {
                var _this = this;

                var apiURL = "/centricaapi/GetWorldMapStats/0/";
                fetch(apiURL)
                    .then(function (res) {
                        return res.json();
                    })
                    .then(function (res) {
                        return (_this.projects = res);
                    })
                ["catch"](function (error) {
                    return console.log(error);
                });
            },
            methods: {
                setFilter: function setFilter(filter) {
                    this.currentFilter = filter;
                },
                setFilterModal: function setFilterModal(filter) {
                    this.currentFilterModal = filter;
                }
            }
        });

    </script>

    



