			scope.sharePopup = function( url ) {

				var w = $( window ).width();
				var h = $( window ).height();
				var specs = '';

				if ( w > 500 || h > 500 ) {

					specs = 'width=500,height=500';
				}

				window.open( url, '', specs, '_blank' );
			};

			// Init
			scope.getData();
		}
	}
})
.directive( 'cmsJobApply', function( $http, $location, $sce, $timeout ) {
	return {
		restrict: 'A',
		scope: {},
		templateUrl: '/tmpls/job-apply.html',
		link: function( scope, element, attrs ) {

			$( document ).on( 'change', '[data-file-role]', function( event ) {

				var this_ = $( this );
				var file = event.originalEvent.target.files[ 0 ];
				var role = this_.data( 'fileRole' );
				var fReader = new FileReader();

				fReader.readAsDataURL( file );

				fReader.onload = function( event ) {

					scope.$apply( function() {
						scope.formData[ role ] = {
							name: file.name,
							size: file.size,
							type: file.type,
							base64: event.target.result
						};
					});
				};
			});

			scope.isLoading = true;
			scope.isSending = false;
			scope._lang = [];
			scope.offer = null;

			scope.hasError = false;
			scope.errorsData = {};

			scope.formData = {};
			scope.formData.slug = null;
			scope.formData.name = null;
			scope.formData.email = null;
			scope.formData.phone = null;
			scope.formData.name = null;
			scope.formData.photo = null;
			scope.formData.cv = null;
			scope.formData.cover_letter = null;
			scope.formData.questions = {};

			scope.toHtml = function( html ) {
				return $sce.trustAsHtml( html );
			};

			scope.getData = function() {

				scope.isLoading = true;

				$http.post( '/cms/job-apply.php', {
					slug: $location.search().o
				})
				.then( function( response ) {

					scope.isLoading = false;
					scope._lang = response.data._lang;
					scope.offer = response.data.offer;

					if ( scope.offer ) {

						scope.formData.slug = scope.offer.slug;
					}
					else {

						document.location.href = '/careers';
					}
				});
			};

			scope.setBoolQuestion = function( id, value ) {

				scope.formData.questions[ id ] = value;
			};

			scope.setMultiQuestion = function( id, value ) {

				if ( ! scope.formData.questions[ id ] ) {

					scope.formData.questions[ id ] = value;
				}
				else {

					var tmp = scope.formData.questions[ id ].split( ', ' );
					var inx = jQuery.inArray( value, tmp );

					inx === -1 ? tmp.push( value ) : tmp.splice( inx, 1 );

					scope.formData.questions[ id ] = tmp.join( ', ' );

					if ( ! scope.formData.questions[ id ] ) {

						delete scope.formData.questions[ id ];
					}
				}
			};

			scope.isEmail = function( str ) {

				return eval( '/[^\\s@]+@[^\\s@]+\\.[^\\s@]{2,}/' ).test( str );
			};

			scope.isImage = function( mimetype ) {

				return eval( '/png|jpg|jpeg/i' ).test( mimetype );
			};

			scope.sendData = function() {

				scope.hasError = false;
				scope.errorsData = {};
				scope.errorsData.questions = {};

				// Validation
				if ( ! scope.formData.name ) {

					scope.hasError = true;
					scope.errorsData.name = true;
				}

				if ( ! scope.isEmail( scope.formData.email ) ) {

					scope.hasError = true;
					scope.errorsData.email = true;
				}

				if ( scope.offer.options_phone === 'required' ) {

					if ( ! scope.formData.phone ) {

						scope.hasError = true;
						scope.errorsData.phone = true;
					}
				}

				if ( scope.offer.options_photo === 'required' ) {

					if ( ! scope.formData.photo ) {

						scope.hasError = true;
						scope.errorsData.photo = true;
					}
				}

				if ( scope.formData.photo ) {

					if ( ! scope.isImage( scope.formData.photo.type ) ) {

						scope.hasError = true;
						scope.errorsData.photo = true;
					}
				}

				if ( scope.offer.options_cv === 'required' ) {

					if ( ! scope.formData.cv ) {

						scope.hasError = true;
						scope.errorsData.cv = true;
					}
				}

				if ( scope.offer.options_cover_letter === 'required' ) {

					if ( ! scope.formData.cover_letter ) {

						scope.hasError = true;
						scope.errorsData.cover_letter = true;
					}
				}

				for ( var i in scope.offer.open_questions ) {

					if ( scope.offer.open_questions[ i ].required ) {

						var id = scope.offer.open_questions[ i ].id;

						if ( ! scope.formData.questions[ id ] ) {

							scope.hasError = true;
							scope.errorsData.questions[ id ] = true;
						}
					}
				}

				if ( ! scope.hasError ) {

					if ( scope.isSending ) {

						return;
					}

					scope.isSending = true;

					$http.post( '/cms/_job-apply.php', scope.formData )
					.then( function( response ) {

						scope.isSending = false;
						scope.status = response.data.status;

						if ( scope.status ) {

							scope.showSuccess = true;
						}
						else {

							scope.showDanger = true;
						}
					});
				}
			};

			scope.$on( '$locationChangeSuccess', function() {

				scope.getData();
			});

			// Init
			scope.getData();
		}
	}
})
.directive( 'cmsSearch', function( $http ) {

	var tmp = '';

	return {
		restrict: 'A',
		link: function( scope, element, attrs ) {

			$( element ).typeahead( null, {
				display: 'name',
				limit: 30,
				source: function( query, syncResults, asyncResults ) {

					tmp = query;
					$http.post( '/cms/search.php', {
						searched: query
					})
					.then(function( response ) {

						asyncResults( response.data );
					});
				},
				templates: {
					pending: '<div class="loader"><img src="\/img\/loader.gif"><\/div>',
					notFound: jsLang[ 0 ]
				}
			})
			.on( "typeahead:selected", function( event, data ) {
				document.location.href = data.url + '?s=' + encodeURIComponent( tmp );
			});
		}
	}
})
.directive( 'cmsMobileNavbarTrigger', function() {
	return {
		link: function( scope, element, attrs ) {

			var navBar = $( '#cms-m-navbar' );
			var allOther = $( 'body > *:not(#cms-m-navbar)' );

			$( element ).on( 'click', function( event ) {

				event.preventDefault();
				event.stopPropagation();
				navBar.addClass( 'active' );

				allOther.one( 'click.nav', function( event ) {
					event.preventDefault();
					navBar.removeClass( 'active' );
				});
			});
		}
	}
})
.directive( 'cmsMobileSubitemsTrigger', function() {
	return {
		link: function( scope, element, attrs ) {

			$( element ).on( 'click', function( event ) {

				event.preventDefault();
				$( 'ul.submenu' ).removeClass( 'in' );
				$( this ).next( 'ul' ).addClass( 'in' );
			});
		}
	}
})
.directive( 'cmsTablist', function() {
	return {
		link: function( scope, element, attrs ) {

			var tablist = $( element );

			tablist.find( '[data-toggle=collapse]' ).on( 'click', function( event ) {

				var panel = $( this ).parents( '.panel' );
				var isActive = panel.hasClass( 'active' );

				tablist.find( '.panel' ).removeClass( 'active' );

				if ( ! isActive ) {

					panel.addClass( 'active' );
				}
			});

			scope.$on( '$locationChangeStart', function( event, newUrl ) {

				if ( !! newUrl.indexOf( '#/cms-tablist' ) ) {

					event.preventDefault();
				}
			});
		}
	}
})
.directive( 'cmsPubsB', function( $http, $location, $sce ) {
	return {
		restrict: 'A',
		scope: {},
		templateUrl: '/tmpls/pubs-b.html',
		link: function( scope, element, attrs ) {

			scope._lang = null;
			scope.isLoading = true;
