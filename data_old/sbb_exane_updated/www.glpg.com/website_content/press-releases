iFrameResize({log: false}, '[data-responsive-iframe]');

var jsLang = [ "No page found" ];
var jsGlobalData = {};

angular.module( 'globApp', [] )
.directive( 'pageLocator', function() {
	return {
		restrict: 'A',
		templateUrl: '/tmpls/page-locator.html'
	}
})
.directive( 'cmsAffix', function( $timeout ) {
	return {
		restrict: 'A',
		link: function( scope, element, attrs ) {

			var this_ = $( element );

			$timeout( function() {

				var offsetVal = parseInt( this_.offset().top ) + 1;

				$( window ).off( 'resize.sab' );
				$( window ).on( 'resize.sab', function() {
					offsetVal = parseInt( this_.offset().top ) + 1;
				} );

				this_.affix({
					offset: {
						top: function() {

							this_.parent().css( 'height', this_.outerHeight( true ) );

							if ( ! this_.hasClass( 'affix' ) ) {

								offsetVal = parseInt( this_.offset().top ) + 1;
							}

							return offsetVal;
						}
					}
				});
			}, 50 );
		}
	}
})
.directive( 'cmsUniEvents', function( $http, $sce ) {
	return {
		restrict: 'A',
		scope: {
			type: '=cmsUniEvents'
		},
		templateUrl: function( element, attrs ) {

			return '/tmpls/' + attrs.tmpl + '.html';
		},
		link: function( scope, element, attrs ) {

			scope.isLoading = true;

			scope.toHtml = function( html ) {
				return $sce.trustAsHtml( html );
			}

			$http.post( '/cms/unievents.php', {
				type: scope.type
			})
			.then( function( response ) {

				scope.isLoading = false;
				scope.events = response.data.events || [];
			});
		}
	}
})
.directive( 'cmsMeetings', function( $http, $location ) {
	return {
		restrict: 'A',
		scope: {},
		templateUrl: function() {

			return '/tmpls/meetings.html';
		},
		link: function( scope, element, attrs ) {

			scope.isLoading = true;

			$http.post( '/cms/meetings.php', {
				params: $location.search()
			})
			.then( function( response ) {

				scope.isLoading = false;
				scope.meetings = response.data.meetings;
				scope.meetingYears = response.data.meetingYears;
				scope.meetingYear_ = response.data.meetingYear_;
			});

			scope.$on( '$locationChangeSuccess', function() {

				scope.isLoading = true;

				$http.post( '/cms/meetings.php', {
					params: $location.search()
				})
				.then( function( response ) {

					scope.isLoading = false;
					scope.meetings = response.data.meetings;
					scope.meetingYears = response.data.meetingYears;
				});
			});

			scope.setMeetingsYear = function( event ) {
				$location.search({
					year: scope.meetingYear_
				});
			}
		}
	}
})
.directive( 'cmsDocs', function( $http, $location, $sce ) {
	return {
		restrict: 'A',
		scope: {},
		templateUrl: function( element, attrs ) {

			return '/tmpls/' + attrs.tmpl + '.html';
		},
		link: function( scope, element, attrs ) {

			scope.isLoading = true;
			scope._lang = [];
			scope.docs = [];
			scope.docYears = [];
			scope.docYear_ = null;

			$http.post( '/cms/unidocs.php', {
				type: attrs.cmsDocs,
				cnt: attrs.cnt || 0,
				params: attrs.skipUrl ? null : $location.search()
			})
			.then( function( response ) {

				scope.isLoading = false;
				scope._lang = response.data._lang;
				scope.docs = response.data.docs;
				scope.docYears = response.data.docYears;
				scope.docYear_ = response.data.docYear_;
			});

			scope.$on( '$locationChangeSuccess', function() {

				if ( attrs.skipUrl ) {

					return true;
				}

				scope.isLoading = true;

				$http.post( '/cms/unidocs.php', {
					type: attrs.cmsDocs,
					cnt: attrs.cnt || 0,
					params: $location.search()
				})
				.then( function( response ) {

					scope.isLoading = false;
					scope._lang = response.data._lang;
					scope.docs = response.data.docs;
					scope.docYears = response.data.docYears;
					scope.docYear_ = response.data.docYear_;
				});
			});

			scope.setDocsYear = function( event ) {
				$location.search({
					year: scope.docYear_
				});
			};

			scope.toHtml = function( html ) {
				return $sce.trustAsHtml( html );
			};
		}
	}
})
.directive( 'cmsUnidocsB', function( $http, $location, $sce, $filter, $anchorScroll ) {
	return {
		restrict: 'A',
		scope: {},
		templateUrl: function( element, attrs ) {

			return '/tmpls/' + attrs.tmpl + '.html';
		},
		link: function( scope, element, attrs ) {

			scope.isLoading = true;
			scope._lang = [];
			scope.docs = [];
			scope.years = [];
			scope.keywords = angular.fromJson( attrs.keywords );
			scope.types = angular.fromJson( attrs.types );
			scope.page = null;
			scope.cntPages = null;

			scope.filter = {
				year: null,
				keyword: null,
				type: null,
				listTypes: scope.types,
				page: null,
				cnt: null
			};

			scope.setPage = function( toPage ) {

				var params = $location.search() || {};

				params.page = toPage;

				$location.search( params );
				$location.hash( attrs.cmsUnidocsB );
				$anchorScroll();
			};

			scope.setFilter = function( prop, val ) {

				var params = $location.search() || {};
				var values = params[ prop ] ? params[ prop ].split( ',' ) : [];

				if ( $filter( 'filter' )( values, val, false ).length === 0 ) {

					values.push( val );
				}
				else {

					values = $filter( 'filter' )( values, '!' + val, false );
				}

				params[ prop ] = values.join( ',' );
				params.page = null;
				params.f = '1';

				$location.search( params );
			};

			scope.resetFilter = function( prop, val ) {

				var params = $location.search() || {};
				var tmp = params[ prop ] ? params[ prop ].split( ',' ) : [];
				var values = $filter( 'filter' )( tmp, '!' + val, false );

				if ( prop !== 'page' ) {

					params.page = null;
				}

				params[ prop ] = values.length > 0 ? values.join( ',' ) : null;

				$location.search( params );
			};

			scope.toHtml = function( html ) {
				return $sce.trustAsHtml( html );
			};

			scope.$on( '$locationChangeSuccess', function() {

				loadDocs();
			});

			var loadDocs = function() {

				scope.isLoading = true;

				scope.filter.type = [];
				scope.filter.year = [];
				scope.filter.kw = [];
				scope.filter.page = $location.search().page || null;
				scope.filter.cnt = attrs.cnt || null;

				if ( $location.search().type ) {

					scope.filter.type = $location.search().type.split( ',' );
				}

				if ( $location.search().year ) {

					scope.filter.year = $location.search().year.split( ',' );
				}

				if ( $location.search().kw ) {

					scope.filter.kw = $location.search().kw.split( ',' );
				}

				$http
				.post( '/cms/unidocs-b.php', scope.filter )
				.then( function( response ) {

					scope.isLoading = false;
					scope._lang = response.data._lang;
					scope.docs = response.data.docs;
					scope.years = response.data.years;
					scope.keywords = scope.keywords;
					scope.types = scope.types;
					scope.page = response.data.page;
					scope.cntPages = response.data.cntPages;
				});
			};

			// Timeline events
			loadDocs();

			$( document )
			.off( 'click.cms-multiple' )
			.on( 'click.cms-multiple', '.dropdown-menu.cms-multiple a', function( event ) {
				event.stopPropagation();
			});
		}
	}
})
.directive( 'cmsNasdaqNews', function( $http, $location ) {
	return {
		restrict: 'A',
		scope: {
			cnt: '=cnt',
		},
