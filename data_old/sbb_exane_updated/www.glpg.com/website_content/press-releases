					scope.isLoading = false;
					scope.pubs = response.data.pubs;
				});
			};

			scope.toHtml = function( html ) {

				return $sce.trustAsHtml( html );
			}

			// Go...
			scope.loadPubs();
		}
	}
})
.directive( 'cmsPublications', function( $http, $location, $sce ) {
	return {
		restrict: 'A',
		scope: {},
		templateUrl: '/tmpls/publications.html',
		link: function( scope, element, attrs ) {

			scope._lang = null;
			scope.data = {};
			scope.data.keyword = null;
			scope.data.tmpKeyword = null;
			scope.data.topics = null;
			scope.data.years = null;
			scope.isLoading = true;
			scope.pg = null;
			scope.pubs = null;
			scope.topics = null;
			scope.years = null;

			scope.loadPubs = function() {

				scope.isLoading = true;

				$http
				.post( '/cms/publications.php', $location.search() )
				.then( function( response ) {

					scope._lang = response.data._lang;
					scope.data = response.data.params;
					scope.data.tmpKeyword = null;
					scope.isLoading = false;
					scope.pg = response.data.pg;
					scope.pubs = response.data.pubs;
					scope.topics = response.data.topics;
					scope.years = response.data.years;
				});
			};

			scope.toggleParam = function( name, val ) {

				var params = $location.search() || {};
				var tmp = params[ name ];
				var ids = tmp ? tmp.split( ',' ) : new Array();
				var index = jQuery.inArray( val.toString(), ids );

				if ( index > -1 ) {

					ids.splice( index, 1 );
				}
				else {

					ids.push( val );
				}

				params[ name ] = ids.sort().join( ',' ) || null;
				params[ 'page' ] = null;

				$location.search( params );
			};

			scope.resetKeyword = function() {

				var params = $location.search() || {};
				params[ 'kw' ] = null;
				params[ 'page' ] = null;

				scope.data.keyword = null;
				$location.search( params );
			};

			scope.setKeyword = function() {

				if ( scope.data.tmpKeyword ) {

					var params = $location.search() || {};
					params[ 'kw' ] = scope.data.tmpKeyword;
					params[ 'page' ] = null;

					$location.search( params );
				}
			};

			scope.setPage = function( page ) {

				$location.search( 'page', page );
			};

			scope.toHtml = function( html ) {

				return $sce.trustAsHtml( html );
			}

			scope.watchVideo = function( pubData ) {

				var modalObj = jQuery( '#pub-content-modal' );

				if ( modalObj.length !== 1 ) {

					return false;
				}

				modalObj.find( '.modal-title' ).html( pubData.title );
				modalObj.find( '.modal-body' ).html( pubData.content );
				modalObj.modal( 'show' );

				modalObj.one( 'hidden.bs.modal', function() {

					modalObj.find( '.modal-title' ).html( '' );
					modalObj.find( '.modal-body' ).html( '' );
				} );
			};

			scope.$on( '$locationChangeSuccess', function() {

				scope.loadPubs();
			} );

			// Go...
			scope.loadPubs();

			$( document )
			.off( 'click.cms-multiple' )
			.on( 'click.cms-multiple', '.dropdown-menu.cms-multiple a', function( event ) {
				event.stopPropagation();
			});
		}
	}
})
